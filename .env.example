# Nexus LMS - Environment Variables Template
# Copy this file to .env and fill in the values

# ================================
# AWS Configuration
# ================================
AWS_ACCOUNT_ID=123456789012
AWS_REGION=ap-south-1
AWS_ROLE_ARN=arn:aws:iam::123456789012:role/nexus-lms-gitlab-runner

# ================================
# EKS Configuration
# ================================
EKS_CLUSTER_NAME=nexus-lms-eks-prod

# ================================
# ECR Repositories
# ================================
ECR_SERVER_REPO=${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/nexus-lms-server
ECR_CLIENT_REPO=${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/nexus-lms-client

# ================================
# Application Configuration
# ================================
NODE_ENV=production
VITE_API_URL=https://api.nexus-lms.example.com

# ================================
# Database Configuration
# ================================
DATABASE_URL=postgresql://nexus_admin:PASSWORD@rds-endpoint:5432/nexus_lms

# ================================
# Redis Configuration
# ================================
REDIS_URL=rediss://:AUTH_TOKEN@redis-endpoint:6379

# ================================
# JWT Configuration
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ================================
# Razorpay Configuration
# ================================
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# ================================
# Cloudinary Configuration
# ================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ================================
# Domain Configuration
# ================================
DOMAIN_NAME=nexus-lms.example.com
CORS_ORIGIN=https://nexus-lms.example.com

# ================================
# Terraform Variables
# ================================
TF_VAR_environment=prod
TF_VAR_aws_region=ap-south-1
TF_VAR_project_name=nexus-lms
TF_VAR_gitlab_project_path=your-org/nexus-lms
TF_VAR_alert_email=devops@example.com
