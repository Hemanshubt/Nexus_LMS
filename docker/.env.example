# Docker environment variables example
# Copy this file to .env and update the values

# ─────────────────────────────────────────
# Database Configuration
# ─────────────────────────────────────────
DB_USER=nexus
DB_PASSWORD=nexus_secure_password_change_me
DB_NAME=nexus_lms

# ─────────────────────────────────────────
# JWT Authentication
# ─────────────────────────────────────────
# Generate with: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_change_this_immediately
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_immediately

# ─────────────────────────────────────────
# Cloudinary (Media Storage)
# ─────────────────────────────────────────
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ─────────────────────────────────────────
# Razorpay (Payments)
# ─────────────────────────────────────────
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# ─────────────────────────────────────────
# Client Configuration
# ─────────────────────────────────────────
VITE_API_URL=http://localhost:3000

# ─────────────────────────────────────────
# PgAdmin (Development Only)
# ─────────────────────────────────────────
PGADMIN_EMAIL=admin@nexus.com
PGADMIN_PASSWORD=admin123
